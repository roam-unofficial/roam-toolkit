{
    "name": "Roam Toolkit",
    "author": "roam-unofficial",
    "version": "0.1.0",
    "description": "Roam!",
    "icons": {
        "128": "assets/icon-128.png"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "permissions": [
        "activeTab",
        "alarms",
        "bookmarks",
        "cookies",
        "storage",
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "clipboardRead",
        "clipboardWrite",
        "*://roamresearch.com/*"
    ],
    "manifest_version": 2,
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_title": "Roam Toolkit",
        "default_icon": "assets/icon-48.png",
        "default_popup": "popup.html"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "content_scripts": [{
        "js": [
            "srs.js",
            "inc-dec-value.js",
            "dispatcher.js",
            "fuzzy_date.js"
        ],
        "matches": [
            "*://*/*"
        ]
    }],
    "commands": {
        "srs-next-bucket": {
            "suggested_key": {
                "default": "MacCtrl+S"
            },
            "description": "Next SRS bucket"
        },
        "increase-value": {
            "description": "Increase value"
        },
        "decrease-value": {
            "description": "Decrease value"
        },
        "delete-current-block": {
            "description": "Delete block you're editing"
        },
        "duplicate-current-block": {
            "description": "Duplicate current block"
        },
        "replace-fuzzy-date": {
            "description": "Replace FuzzyDate with computer date"
        }
    }
}